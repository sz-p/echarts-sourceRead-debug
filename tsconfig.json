{
    "compilerOptions": {
      "baseUrl": "src",
      "outDir": "./build",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "lib": [
        "es6",
        "dom"
      ],
      "jsx": "react",
      "module": "esnext",
      "allowJs": true,
      "sourceMap": true,
      "target": "es5"
    },
    "include": [
      "./src/**/*",
      "./typings/"
    ]
  }
